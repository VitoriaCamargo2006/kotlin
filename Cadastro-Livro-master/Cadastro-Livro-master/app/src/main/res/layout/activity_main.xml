<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_nomeLivro"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Nome do Livro"
        android:inputType="text"
        android:textColorHint="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_autor"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Autor"
        android:inputType="text"
        android:textColorHint="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nomeLivro" />

    <EditText
        android:id="@+id/et_ano"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Ano"
        android:inputType="text"
        android:textColorHint="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_autor" />

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="362dp"
        android:layout_height="65dp"
        android:layout_marginTop="224dp"
        android:text="Cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ano" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_avancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:clickable="true"
        android:contentDescription="AvanÃ§ar para proxima tela"
        app:fabSize="auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ano"
        app:maxImageSize="40dp"
        app:srcCompat="@android:drawable/ic_media_play" />
</androidx.constraintlayout.widget.ConstraintLayout>