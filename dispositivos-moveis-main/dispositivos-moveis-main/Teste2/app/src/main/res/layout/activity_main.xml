<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txv_operacao"
        android:layout_width="123dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:text="Operador"
        android:textAlignment="viewStart"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toEndOf="@+id/rgp_operacao"
        app:layout_constraintTop_toBottomOf="@+id/txv_titulo" />

    <TextView
        android:id="@+id/txv_titulo2"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Resultado: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toEndOf="@+id/rgp_operacao"
        app:layout_constraintTop_toBottomOf="@+id/txv_operacao" />

    <TextView
        android:id="@+id/txv_resultado"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginTop="80dp"
        android:text="-.-.-.-.-.-"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toEndOf="@+id/rgp_operacao"
        app:layout_constraintTop_toBottomOf="@+id/txv_operacao" />

    <TextView
        android:id="@+id/txv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Calculadora"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgp_operacao"
        android:layout_width="103dp"
        android:layout_height="216dp"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbt_somar"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text=" +"
            android:textSize="34sp" />

        <RadioButton
            android:id="@+id/rbt_subtrair"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text=" -"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbt_multiplicar"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text=" X"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbt_dividir"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text=" /"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="212dp"
        android:layout_height="79dp"
        android:layout_marginTop="104dp"
        android:text="Calcular"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnd_n2" />

    <EditText
        android:id="@+id/etnd_n2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Ex: 11 ou 11.11"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnd_n1" />

    <EditText
        android:id="@+id/etnd_n1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="412dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Ex: 2 ou 2.22"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_operador"
        android:layout_width="121dp"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:text="Operador"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnd_n1" />

</androidx.constraintlayout.widget.ConstraintLayout>